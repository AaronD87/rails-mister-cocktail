<h1>Your cocktail</h1>
<h3><%= @cocktail.name  %></h3>
<% if @cocktail.doses  %>
<h3>Ingredients</h3>
<% doses = @cocktail.doses  %>
<ul>
  <% doses.each do |dose|  %>
  <li>
    <%= dose.description  %>
    <%= dose.ingredient.name  %>
    <br>
    <%= link_to 'remove', cocktail_dose_path(@cocktail, dose),
    method: :delete, data: {confirm: "Are your sure?"} %> <br>
  </li>
  <% end  %>
</ul>
<% end  %>
  <%= link_to 'add a dose', new_cocktail_dose_path(@cocktail)  %> <br>
  <%= link_to 'back to index', cocktails_path  %>
